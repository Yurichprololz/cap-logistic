{
    "name": "cap-logistic",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": ">=5",
        "express": "^4"
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.102.9",
        "rimraf": "^3.0.2",
        "sqlite3": "^5.0.4"
    },
    "scripts": {
        "start": "cds run",
        "watch-ui.driver": "cds watch --open ui.driver/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy cap-logistic --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
        "watch-ui.car": "cds watch --open ui.car/webapp/index.html?sap-ui-xx-viewCache=false",
        "watch-ui.good": "cds watch --open ui.good/webapp/index.html?sap-ui-xx-viewCache=false"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "db": {
                "kind": "sqlite",
                "credentials": {
                    "database": "sqlite.db"
                }
            }
        }
    },
    "sapux": [
        "app/ui.driver",
        "app/ui.car",
        "app/ui.good"
    ]
}