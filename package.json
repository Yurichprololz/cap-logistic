{
  "name": "cap-logistic",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": ">=5",
    "@sap/xssec": "^3.2.13",
    "express": "^4",
    "hdb": "^0.19.0",
    "passport": "^0.6.0",
    "sap-cf-axios": "^0.3.6"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.102.9",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "dev": "cds watch --profile hybrid",
    "start": "cds run",
    "watch-ui.driver": "cds watch --open ui.driver/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy cap-logistic --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-ui.car": "cds watch --open ui.car/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-ui.good": "cds watch --open ui.good/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "hana-cloud"
      },
      "[hybrid]": {
        "db": {
          "kind": "hana-cloud"
        },
        "CPI_DESTINATION": {
          "kind": "rest",
          "credentials": {
            "destination": "CPI_DESTINATION"
          }
        }
      }
    }
  },
  "sapux": [
    "app/ui.driver",
    "app/ui.car",
    "app/ui.good"
  ]
}
